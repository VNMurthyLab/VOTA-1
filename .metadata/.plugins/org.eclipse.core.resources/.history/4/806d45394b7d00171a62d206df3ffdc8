import numpy as np
import PyDAQmx as mx
from ctypes import *

class DAQaiDev(object):
    
    def __init__(self,channels='dev2/ai1:2',rate=1000.0):
        self.set_channels(channels)
        self.set_rate(rate)
        
    def set_channels(self,channels):
        self._channels=channels
        
    def set_rate(self,rate):
        self._rate=rate
        
    def create_task(self):
        mx.DAQmxCreateTask("ai",byref(taskHandles[name]))
        mx.DAQmxCreateAIVoltageChan()
    
    