import numpy as np
from queue import Queue

class OdorGenDev(object):
    '''
    classdocs
    '''

    def __init__(self,num_of_sol=4,buffer_size=1,queue_size=100000):
        '''
        Constructor
        '''
        self.num_of_sol=num_of_sol
        self.buffer_size=buffer_size
        self.step=buffer_size
        self.queue_size=queue_size
        self.max_tick=queue_size
        
        self.tick=0
        
        self.data=np.zeros((queue_size,num_of_sol),dtype=float)
        self.buffer=Queue(queue_size)
        
    def sqr_wave(self):
        pass
    
    def read(self):
        return self.buffer.get()
    
    def write(self,val):
        self.buffer.put(val)
    
    def is_empty(self):
        return self.buffer.qsize()==0
    
    def flush_data(self):
        self.data=np.zeros((self.queue_size,self.num_of_sol),dtype=float)
        
    def flush_buffer(self):
        with self.buffer.mutex:
            self.buffer.clear()

    def flush(self):
        self.flush_data()
        self.flush_buffer()

if __name__ == '__main__':
    pass