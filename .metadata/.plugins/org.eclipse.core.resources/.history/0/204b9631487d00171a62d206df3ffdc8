from ScopeFoundry import HardwareComponent
from PyDAQmx import *

class DAQaiHW(HardwareComponent):
    '''
    Hardware Component Class for receiving AI input for breathing, licking etc
    '''
    
    name='daq_ai'

    def setup(self):
        '''
        add settings for analog input event
        '''
        self.settings.New(name='channels',initial='Dev2/ai13:15',dtype=str,ro=false)
        self.settings.New(name='rate',initial=1000.0,dtype=float,ro=false)
        self._task=Task()
        self._channels=self.settings.get_lq('channels')
                
    def connect(self):
        self._task.CreateAIVoltageChan(self._channels.value(),DAQmx_Val_Cfg_Default,-10.0,10.0,DAQmx_Val_Volts,None)
        self._task.CfgSampClkTiming("",10000.0,DAQmx_Val_Rising,DAQmx_Val_FiniteSamps,1000)
        self._task.StartTask()
        
    