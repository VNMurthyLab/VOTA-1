import numpy as np
import serial
import time
from queue import Queue
from math import pow 

class ArduinoWheelDev(object):
    '''
    classdocs
    '''

    def __init__(self, port='COM4',baud_rate=250000):
        '''
        Constructor
        '''
        self.port=port
        self.baud_rate=baud_rate
        self.ser=serial.Serial(self.port,self.baud_rate,timeout=1)
        #self.open()
        self.position=0
        self.last=0
        self.speed=0
        
    def update(self):
        self.ser.flush()
        self.ser.write(b'1')
        self.last=self.position
        self.position=self.position
        self.speed=self.position-self.last
        
    def byte_to_int(self,b):
        x=0
        for i in range(len(b)):
            x+=b[i]*pow(10,9-i)
        return x
    
    def read(self):
        self.update()
        return self.position,self.speed
    
    def read_position(self):
        self.update()
        return self.position
    
    def read_speed(self):
        self.update()
        return self.speed
    
    def open(self):
        self.ser.open()
        time.sleep(2)
        
    def close(self):
        self.ser.close()
    
    def __del__(self):
        self.close()
        del self.ser
        

if __name__ == '__main__':
    sol=ArduinoWheelDev()
    time.sleep(2)
    for i in range(10):
        sol.ser.write(b'1')
        print(sol.ser.read(10))