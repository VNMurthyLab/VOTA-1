import numpy as np
from scipy import signal
from queue import Queue
import matplotlib.pyplot as plt

class OdorGenDev(object):
    '''
    classdocs
    '''

    def __init__(self,num_of_sol=4,buffer_size=1,queue_size=100000):
        '''
        Constructor
        '''
        self.num_of_sol=num_of_sol
        self.buffer_size=buffer_size
        self.step=buffer_size
        self.dt=buffer_size*1000;
        self.queue_size=queue_size
        self.max_tick=queue_size
        
        self.tick=0
        
        self.data=np.zeros((queue_size,num_of_sol),dtype=float)
        self.t=np.linspace(0,queue_size/self.dt,queue_size)
        self.buffer=Queue(queue_size)
        
    def gen_sqr_wave(self,frequency,duty_cycle):
        self.data=signal.square(self.t,50)
    
    def read(self):
        return self.buffer.get()
    
    def write(self,val):
        self.buffer.put(val)
    
    def is_empty(self):
        return self.buffer.qsize()==0
    
    def flush_data(self):
        self.data=np.zeros((self.queue_size,self.num_of_sol),dtype=float)
        
    def flush_buffer(self):
        with self.buffer.mutex:
            self.buffer.clear()

    def flush(self):
        self.flush_data()
        self.flush_buffer()

if __name__ == '__main__':
    odor_gen=OdorGenDev()
    odor_gen.gen_sqr_wave(1,2)
    plt.plot(odor_gen.t, odor_gen.data)
    print(odor_gen.data)
    plt.show()