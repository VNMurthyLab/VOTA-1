import numpy as np
import serial
import time
from queue import Queue

class ArduinoWheelDev(object):
    '''
    classdocs
    '''

    def __init__(self, port='COM4',baud_rate=250000):
        '''
        Constructor
        '''
        self.port=port
        self.baud_rate=baud_rate
        self.ser=serial.Serial(self.port,self.baud_rate,timeout=1)
        #self.open()
        self.position=0
        self.last=0
        self.speed=0
        
    def read(self):
        self.ser.write(b'1')
        self.last=self.position
        self.position=int(self.ser.readline().decode('utf-8'))
        return self.position
    
    def open(self):
        self.ser.open()
        time.sleep(2)
        
    def close(self):
        self.ser.close()
    
    def __del__(self):
        self.close()
        del self.ser
        

if __name__ == '__main__':
    sol=ArduinoWheelDev()
    time.sleep(2)
    for i in range(100):
        print(sol.read())