from ScopeFoundry import HardwareComponent
import winsound

class SoundHW(HardwareComponent):
    '''
    Hardware Component Class for receiving AI input for breathing, licking etc
    '''
    
    name='sound'

    def setup(self,camera_id=0):
        pass
        
                
    def connect(self):
        pass
        
    def start(self):
        winsound.PlaySound('beep_start.wav', winsound.SND_FILENAME)
        
    def disconnect(self):
        try:
            pass
            
        except AttributeError:
            pass
        
if __name__ == '__main__':
    sound = SoundHW()
    sound.start()