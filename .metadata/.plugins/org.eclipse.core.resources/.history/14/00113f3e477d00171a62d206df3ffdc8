from ScopeFoundry import HardwareComponent
from PyDAQmx import *

class DAQaiHW(HardwareComponent):
    '''
    Hardware Component Class for receiving AI input for breathing, licking etc
    '''
    
    name='daq_ai'

    def setup(self):
        '''
        add settings for analog input event
        '''
        self.settings.New(name='channels',initial='Dev2/ai13:15',dtype=str,ro=false)
        self.settings.New(name='rate',initial=1000.0,dtype=float,ro=false)
        self._task=Task()
        
        
    def connect(self):
    