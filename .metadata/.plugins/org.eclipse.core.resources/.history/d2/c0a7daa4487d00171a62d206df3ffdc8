from ScopeFoundry import HardwareComponent
from PyDAQmx import *

class DAQaiHW(HardwareComponent):
    '''
    Hardware Component Class for receiving AI input for breathing, licking etc
    '''
    
    name='daq_ai'

    def setup(self,channels='Dev2/ai0',rate=1000.0):
        '''
        add settings for analog input event
        '''
        self.settings.New(name='channels',initial=channels,dtype=str,ro=false)
        self.settings.New(name='rate',initial=rate,dtype=float,ro=false)
        self._task=Task()
                
    def connect(self):
        channels=self.settings.get_lq('channels').value())
        self._task.CreateAIVoltageChan(self.settings.get_lq('channels').value,DAQmx_Val_Cfg_Default,-10.0,10.0,DAQmx_Val_Volts,None)
        self._task.CfgSampClkTiming("",self.settings.get_lq(.,DAQmx_Val_Rising,DAQmx_Val_FiniteSamps,1000)
        self._task.StartTask()
        analog_input.ReadAnalogF64(1000,10.0,DAQmx_Val_GroupByChannel,data,1000,byref(read),None)
        
        
        
if __name__ == '__main__':
    import sys
    
    app = VOTAScopeApp(sys.argv)
    sys.exit(app.exec_())